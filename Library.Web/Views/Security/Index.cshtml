@model Library.DB.Kullanicilar
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kütüphane - Giriş</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style type="text/css">
        .loginArea {
            max-width: 500px;
            width: 100%;
            padding: 20px;
            border-radius: 10px;
            border: 1px solid #333333;
            position: absolute;
            top: 50%;
            left: 50%;
            margin-top: -150px;
            margin-left: -270px;
        }
        .loginBackImage {
            background-image: url('../../Content/images/Livraria Lello Porto.jpeg');
            background-size: 100%;
            background-position: center;
            background-repeat: repeat-y;
            background-color: #e2e2e2;
            margin: 0;
            padding: 0;
        }
        .loginBaslik {
            color: #f6f1f1;
            text-align: center;
            font-weight: 900;
            text-emphasis-color: deeppink;
            padding-left: 50px;
        }
    </style>
</head>
<body id="bodyScreen" class="loginBackImage">

    <div class="loginArea">
        @using (Html.BeginForm("Index", "Security", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    { 
            <h2 class="loginBaslik">Kütüphane Giriş</h2>
        <div class="form-group" style="color:#f6f1f1; font-size:20px">
            @Html.LabelFor(m => m.email, new { @class = "control-label col-md-3"})
            <div class="col-md-9" style="opacity:0.7";>
                @Html.TextBoxFor(m => m.email, new { @class = "form-control",id="txtEmail",style= "font-size:18px; border-radius:20px" })
                @Html.ValidationMessageFor(m => m.email)
            </div>
        </div>
        <div class="form-group" style="color:#f6f1f1; font-size:20px">
            @Html.LabelFor(m => m.sifre, new { @class = "control-label col-md-3" })
            <div class="col-md-9"  style="opacity:0.7">
                @Html.TextBoxFor(m => m.sifre, new { @class = "form-control", type = "password", style = "font-size:18px; border-radius:20px" })
                @Html.ValidationMessageFor(m => m.sifre)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12 text-right" style="padding:10px 20px;">
                <input type="button" value="Kaydol" class="btn btn-primary btn-sm" style="margin-right:20px;" onclick="@("window.location.href='" + @Url.Action("Create", "Security") + "'");" />
                <button type="submit" id="btnLogin" class="btn btn-primary btn-sm" style="margin-right:50px;">Giriş</button>
            </div>
        </div>
        <div class="clearfix"></div>
}
    </div>
</body>
</html>
<script type="text/javascript">
    var background = ['url(/Content/images/Austrian National Library – Vienna, Austria.jpeg)',
        'url(/Content/images/Beyazıd kütüphanesii.jpg)',
        'url(/Content/images/George Peabody Library, Johns Hopkins University – Baltimore, Maryland, USA.jpg)',
        'url(/Content/images/i ü iktisat kütüphanesi.jpg)'];

    $(document).ready(function () {
        ChangeBack();
    });

    function ChangeBack() {
        var index = Math.floor(Math.random() * 4);
        $('loginBackImage').css('background-image', background[index])
    }
</script>